                                <select id="dropdown-select" name="size">
                                    <% if (pro.size && Array.isArray(pro.size)) { %>
                                        <% pro.size.forEach(option => { %>
                                            <option value="<%= option %>"><%= option %></option>
                                        <% }); %>
                                    <% } else { %>
                                        <option value="">No size options available</option>
                                    <% } %>
                                </select>
                                <div class="select-arrow"></div>
                            </div>
                            
                            <!-- ==== -->
                            <div class="d-flex">
                                <div style="font-size: 13px; margin-top: 20px;">Find a seller that delivers to you
                                </div>
                            </div>
                            <div>
                                <div class="d-flex">
                                    <p class="delivery"></p>
                                    <p style="color: #388e3c; font-size: 14px; margin-top: 5px;"><b>FREE Delivery
                                        </b></p>
                                    <p style="text-decoration: line-through; margin: 5px 5px 0px 5px; font-size: 15px;">
                                        ₹40</p>
                                    <p style="font-size: 15px; margin-top: 5px;"><b>Delivery by 19 Jan, Friday</b>
                                    </p>
                                </div>
                                <div class="d-flex">
                                    <p class="policy"></p>10 Days Return Policy
                                </div>
                                <div class="d-flex">
                                    <p class="cash"></p>Cash on Delivery Available
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div style="margin-bottom: 60px;">
            <p style="margin-left: 20px;"><b>Product Details</b></p>
            <div class="nav-logobar">
                <div class="m-4">
                    <div style="color: gray;">
                        <p>Faded</p>
                        <p>Rise</p>
                        <p>Distressed</p>
                        <p>Color</p>
                    </div>
                </div>
                <div class="m-4">
                    <div style="color: gray;">
                        <p>Clean Look</p>
                        <p>Low Rise</p>
                        <p>Clean Look</p>
                        <p><%= pro.color %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ==================================================================== -->

    <div style="display: flex;">
        <a href="">
            <div>
                <button class="fixed-button">Add to Cart</button>
            </div>
        </a>
        <div>
            <a href="">
                <button class="buy-now">Buy now</button>
            </a>
        </div>
    </div>
    <% }); %>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
